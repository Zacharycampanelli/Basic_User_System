<article class='post my-2 p-2 d-flex justify-content-between'>
  <div class='post-content d-flex flex-column '>

    <div class='post-user'>
      <i class='fa-solid fa-user me-2'></i>
      <span class='fw-bold'>{{user.username}}</span>
    </div>

    <a class='post-title fw-bold mb-2' href='/post/{{id}}' target='_blank'>{{title}}</a>

    <div class='post-body mb-1 d-flex'>
      <span class='post-text'>{{bodyText}}</span>
      
      
    </div>
    
    <p class='post-date'>{{format_date created_at}}</p>
  </div>

  <div class='post-photo col-3'>
    <img src={{photoUrl}} class='img-fluid post-img' />
  </div>

</article>